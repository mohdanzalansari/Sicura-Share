<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="120sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/encryptFileBtnBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:text="Encrypt"
                style="@style/Widget.AppCompat.Button.Colored"/>

            <Button
                android:id="@+id/decrytFileBtnBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="40sp"
                android:layout_weight="1"
                android:text="Decrypt"
                style="@style/Widget.AppCompat.Button.Colored"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passLnLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/passBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter Password..."
                android:inputType="textPassword"
                android:textSize="18sp" />

            <Button
                android:id="@+id/passSetBtnBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_marginEnd="20sp"
                android:layout_weight="1"
                android:text="Set Password"
                style="@style/Widget.AppCompat.Button.Colored"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/otherBtnLnLy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120sp"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/imagefileBtnBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:text="Image"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/videofileBtnBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:text="Video"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/audiofileBtnBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:text="Audio"
                    style="@style/Widget.AppCompat.Button.Colored"/>

                <Button
                    android:id="@+id/otherfileBtnBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:text="Other"
                    style="@style/Widget.AppCompat.Button.Colored"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/cancelBtnBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:text="Cancel"
            android:visibility="gone"
            style="@style/Widget.AppCompat.Button.Colored"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>